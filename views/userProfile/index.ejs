<%- layout('./boilerplate/boilerplate3') %>

<main class="container-fluid">
    <div class="px-3 py-5 h3 mt-3 bg-warning text-white">Club Coordinator Admin Desk : <span class="text-capitalize"><%= user.club.name %></span> Club </div>

    <div class="div w-100 bg-primary d-flex align-items-center justify-content-between px-5 py-3 text-white">
        <p class="m-0 text-capitalize"><%= user.username %></p>
        <p class="m-0"><%= user.email %></p>
    </div>

    <section class="events">
        <div class="h4 my-3 d-flex justify-content-between">All Upcoming Events <span> <a href="/event/new" class="btn btn-lg btn-outline-danger">Add Events</a> </span></div>
        <div>
        <% event.forEach(element => { %>
            
            <div class="card w-100 d-flex flex-row align-items-center text-white bg-dark my-3">
                <div class="w-25">
                    <img src="<%= element.image.path %>" alt="" srcset="" class="img-fluid w-100" style="height: 200px; object-fit: cover;">
                </div>
                <div class="card-body border-end"> <p class="h3 text-capitalize"><%= element.event_name %></p> <p><%= element.event_date %></p></div>
                <div class=" d-flex flex-column text-center mx-4">
                    <div>
                        <a href="/event/<%= element._id %>" class=" my-3 btn btn-lg btn-outline-warning">Event Details</a>
                    </div>
                    <div>
                        <a href="/user/event/<%= element._id %>/participant" class=" my-3 btn btn-lg btn-outline-primary">Registered Participants </a>
                    </div>
                    
                </div>
                
            </div>
        <% }) %>
        
    </section>

</main>