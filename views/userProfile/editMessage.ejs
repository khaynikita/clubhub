<% layout('./boilerplate/boilerplate3.ejs')%>
    <main class="bg-white px-5 py-4 rounded  ">
    <h1 class="px-3 py-5 h3 mt-3 bg-primary text-white">Edit Notifications:</h1>
    <form action="/user/message/<%= msg._id %>?_method=PUT" method="POST" class="needs-validation my-5" novalidate>
        <div class="mb-3 " >
            <label for="title" class="form-label text-black">Title:</label>
            <input type="text" name="title" id="title" class="form-control" required value="<%= msg.title %>">
        </div>
        <div class="form-floating">
            <textarea class="form-control" placeholder="Write Notification Message Here." id="data" style="height: 100px" name="data"><%= msg.data %></textarea>
            <label for="data">Notification Body</label>
          </div>
        <button class=" btn btn-lg btn-success w-100 my-4">Log In</button>
    </form>
    </main>

</div>
